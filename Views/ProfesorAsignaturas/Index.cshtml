@model IEnumerable<Proyecto.Models.ProfesorAsignatura>



<h2>Asignaturas por Profesor.</h2>

@using (Html.BeginForm("GenerateReport", "Report", new { reportName = "AsignaturasProfesores" }, FormMethod.Post))
{
    <button type="submit" class="btn btn-dark m-1">Listado de Asignaturas por Profesores</button>
}

<div class="container">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Nombre del Profesor</th>
                <th>Asignaturas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grupo in Model.GroupBy(pa => pa.Profesor.Nombre))
            {
                <tr>
                    <td>@grupo.Key</td>
                    <td>
                        <table>
                            @foreach (var item in grupo)
                            {
                                <tr>
                                    <td>@item.Asignatura.Nombre</td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div class="mb-5"><br></div>

    <h2>Profesores por Asignatura.</h2>

    @using (Html.BeginForm("GenerateReport", "Report", new { reportName = "ProfesoresAsignaturas" }, FormMethod.Post))
    {
        <button type="submit" class="btn btn-dark m-1">Listado de Profesores por Asignaturas</button>
    }

    <!-- Tabla para mostrar los profesores por asignatura -->
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Asignatura</th>
                <th>Profesores</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grupo in Model.GroupBy(pa => pa.Asignatura.Nombre))
            {
                <tr>
                    <td>@grupo.Key</td>
                    <td>
                        <table>
                            @foreach (var item in grupo)
                            {
                                <tr>
                                    <td>@item.Profesor.Nombre</td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
